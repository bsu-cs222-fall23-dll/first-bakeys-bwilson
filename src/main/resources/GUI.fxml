<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="194.0" prefWidth="262.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WikipediaRevisionHistory.Controller">
   <children>
      <Label text="Wikipedia revision history" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="URL:">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="userInput" alignment="CENTER" />
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#search" text="Search" />
      <TextFlow fx:id="resultTextFlow" />
   </children>
</VBox>
